generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  name          String?
  role          String         @default("user")
  password      String?
  passwordSet   Boolean        @default(false)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  accounts      Account[]
  agenda        Agenda[]
  decisions     Decision[]
  notifications Notification[]
  notulensi     Notulensi[]
  sessions      Session[]
  surat         Surat[]
  tasks         Task[]
}

model Agenda {
  id               String     @id @default(cuid())
  judul            String
  tanggal          String
  waktu            String
  lokasi           String
  jenis            String
  peserta          String
  deskripsi        String?
  status           String     @default("Dijadwalkan")
  googleCalendarId String?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  createdBy        String
  creator          User       @relation(fields: [createdBy], references: [id])
  notulensi        Notulensi?
}

model Task {
  id              String    @id @default(cuid())
  judul           String
  deskripsi       String
  prioritas       String
  status          String    @default("Menunggu")
  progress        Int       @default(0)
  deadline        String
  kategori        String
  penanggungJawab String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  completedAt     DateTime?
  createdBy       String
  creator         User      @relation(fields: [createdBy], references: [id])
}

model Notulensi {
  id         String    @id @default(cuid())
  judul      String
  tanggal    String
  jenis      String
  peserta    String
  status     String    @default("Draft")
  isi        String?
  kesimpulan String?
  lampiran   String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  approvedAt DateTime?
  approvedBy String?
  createdBy  String
  agendaId   String?   @unique
  agenda     Agenda?   @relation(fields: [agendaId], references: [id])
  creator    User      @relation(fields: [createdBy], references: [id])
}

model Surat {
  id        String   @id @default(cuid())
  nomor     String   @unique
  jenis     String
  judul     String
  pengirim  String
  penerima  String
  tanggal   String
  isi       String?
  lampiran  String?
  status    String   @default("Menunggu")
  prioritas String   @default("Normal")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String
  creator   User     @relation(fields: [createdBy], references: [id])
}

model Decision {
  id              String    @id @default(cuid())
  judul           String
  deskripsi       String
  status          String    @default("Dalam Perencanaan")
  progress        Int       @default(0)
  targetDate      String
  kategori        String
  penanggungJawab String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  completedAt     DateTime?
  createdBy       String
  creator         User      @relation(fields: [createdBy], references: [id])
}

model Imam {
  id              String   @id @default(cuid())
  nama            String
  paroki          String
  jabatan         String
  status          String   @default("Aktif")
  tanggalTahbisan String
  nomorTelepon    String
  email           String
  alamat          String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Notification {
  id        String    @id @default(cuid())
  judul     String
  pesan     String
  jenis     String    @default("info")
  status    String    @default("unread")
  createdAt DateTime  @default(now())
  readAt    DateTime?
  userId    String
  user      User      @relation(fields: [userId], references: [id])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
